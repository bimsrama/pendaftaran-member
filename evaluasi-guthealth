    <script>
        // *** GANTI DENGAN URL WEB APP SCRIPT ANDA ***
        const SCRIPT_URL = 'https://script.google.com/macros/s/AKfycbx.../exec'; 

        function submitEvaluasi() {
            const wa = document.getElementById('whatsapp').value;
            const feedback = document.getElementById('feedback').value;
            const btn = document.getElementById('btn-submit');

            if(!wa || !feedback) { 
                alert("⚠️ Mohon isi nomor WA dan ceritamu."); 
                return; 
            }

            const originalText = btn.innerHTML;
            btn.innerHTML = '<div class="loader"></div>';
            btn.disabled = true;

            // Kirim data dengan action 'evaluasi'
            fetch(SCRIPT_URL + '?action=evaluasi&whatsapp=' + encodeURIComponent(wa) + '&feedback=' + encodeURIComponent(feedback), {
                method: 'POST'
            })
            .then(res => res.json())
            .then(data => {
                if(data.result === 'success') {
                    document.getElementById('form-content').classList.add('hidden');
                    document.getElementById('success-msg').classList.remove('hidden');
                } else {
                    alert("❌ " + data.message);
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                }
            })
            .catch(err => {
                alert("❌ Gagal terhubung.");
                btn.innerHTML = originalText;
                btn.disabled = false;
            });
        }
    </script>
